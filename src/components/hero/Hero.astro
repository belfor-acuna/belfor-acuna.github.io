import './hero.css';
import Boton from '../atoms/Boton.astro';
---

<section class="hero">

	<div class="hero__container">
		<div class="text__content">
			<h1 class="hero__title color__gradiente">Welcome :)</h1>
			<p class="hero__text">
				Thank you for stopping by! Feel free to explore my website to learn more about me and my work.			</p>
